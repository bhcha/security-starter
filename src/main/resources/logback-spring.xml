<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console Appender with Color Support -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %highlight(%-5level) %cyan(%logger{36}) - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Security Startup Logger -->
    <logger name="SECURITY.STARTUP" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Security Request Logger -->
    <logger name="SECURITY.REQUEST" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Security Event Logger -->
    <logger name="SECURITY.EVENT" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Security Audit Logger -->
    <logger name="SECURITY.AUDIT" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Security Performance Logger -->
    <logger name="SECURITY.PERFORMANCE" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Security Auth Logger -->
    <logger name="SECURITY.AUTH" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Hexacore Security Package -->
    <logger name="com.ldx.hexacore.security" level="INFO"/>

    <!-- Root Logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>